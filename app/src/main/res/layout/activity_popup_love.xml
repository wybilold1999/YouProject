<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@mipmap/xd_gx"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/my_portrait"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"
            android:contentDescription="@null"
            app:roundingBorderWidth="1dp"
            app:roundingBorderColor="@color/circle"
            app:actualImageScaleType="fitCenter"
            app:failureImage="@mipmap/default_head"
            app:placeholderImage="@mipmap/default_head"
            app:placeholderImageScaleType="fitCenter"
            app:roundAsCircle="true"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/other_portrait"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            app:roundingBorderWidth="1dp"
            app:roundingBorderColor="@color/circle"
            app:actualImageScaleType="fitCenter"
            app:failureImage="@mipmap/default_head"
            app:placeholderImage="@mipmap/default_head"
            app:placeholderImageScaleType="fitCenter"
            app:roundAsCircle="true"/>

    </FrameLayout>

    <TextView
        android:id="@+id/love_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="@string/love_name"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/send_msg"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:fb_defaultColor="@color/colorPrimary"
        app:fb_focusColor="@color/colorAccent"
        app:fb_radius="5dp"
        app:fb_text="@string/send_msg"
        app:fb_textColor="#ffffffff"/>


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/going_find"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:fb_defaultColor="#55acee"
        app:fb_focusColor="#8cc9f8"
        app:fb_radius="5dp"
        app:fb_text="@string/going_find"
        app:fb_textColor="#ffffffff"/>



</LinearLayout>