<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
									xmlns:app="http://schemas.android.com/apk/res-auto"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginTop="5dp"
									android:layout_marginLeft="5dp"
									android:layout_marginRight="5dp"
									android:layout_marginBottom="5dp"
									app:cardBackgroundColor="#fff"
									app:cardCornerRadius="0dp"
									app:cardElevation="3dp"
									app:cardPreventCornerOverlap="true">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/portrait"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="10dp"
			android:contentDescription="@null"
			app:actualImageScaleType="fitCenter"
			app:failureImage="@mipmap/default_head"
			app:placeholderImage="@mipmap/default_head"
			app:placeholderImageScaleType="fitCenter"
			app:roundedCornerRadius="5dp"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/portrait"
			android:layout_marginLeft="5dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/apk_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="2dp"
				android:layout_gravity="center_vertical"
				android:text="微信"
				android:textColor="@color/body_text_1"
				android:textSize="16sp"/>

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/apk_size"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dp"
					android:text="23.1M"
					android:textSize="12sp"
					android:textColor="@color/gray_text"/>

				<TextView
					android:id="@+id/apk_price"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dp"
					android:layout_toRightOf="@id/apk_size"
					android:text="下载赚2元"
					android:textSize="12sp"
					android:textColor="@color/colorPrimary"/>

			</RelativeLayout>

			<TextView
				android:id="@+id/apk_introduce"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="2dp"
				android:layout_marginLeft="2dp"
				android:layout_marginRight="2dp"
				android:layout_marginBottom="4dp"
				android:ellipsize="end"
				android:maxLines="1"
				android:textSize="12sp"
				android:text="哈哈哈哈哈哈哈哈哈哈哈哈"
				android:textColor="@color/gray_text"/>

		</LinearLayout>

		<Button
			android:id="@+id/download"
			android:layout_width="60dp"
			android:layout_height="30dp"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dp"
			android:layout_marginBottom="5dp"
			android:layout_centerVertical="true"
			android:background="@drawable/button_radius_background"
			android:text="@string/download"
			android:textColor="@android:color/white"
			android:textSize="12sp"/>

	</RelativeLayout>

</android.support.v7.widget.CardView>