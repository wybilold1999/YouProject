<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/item_msg"
              android:layout_width="match_parent"
              android:layout_height="64dp"
              android:background="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <RelativeLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="4dp" >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/portrait"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                app:actualImageScaleType="fitCenter"
                app:failureImage="@mipmap/default_head"
                app:placeholderImage="@mipmap/default_head"
                app:placeholderImageScaleType="fitCenter"
                app:roundedCornerRadius="5dp"/>

            <TextView
                android:id="@+id/un_read_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/personal_alert_bg"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/red_point"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@null"
                android:src="@mipmap/personal_alert_bg"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="12sp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#353535"
                    android:textSize="16sp"
                    android:text="title"/>

                <TextView
                    android:id="@+id/update_time"
                    android:layout_width="110.0dip"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="right|top"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#BBBBBB"
                    android:textSize="12sp"
                    android:text="12/20 11:09"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:text="可以和你聊聊吗?"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>