<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_actionbar_with_headerbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="16sp"
            android:hint="@string/input_new_password"
            fancy:met_baseColor="@color/colorPrimary"
            fancy:met_primaryColor="@color/colorPrimary"
            fancy:met_floatingLabelText="@string/input_new_password"
            fancy:met_floatingLabel="highlight"
            fancy:met_floatingLabelTextColor="@color/colorPrimary"
            fancy:met_textColorHint="@color/gray_text"
            fancy:met_underlineColor="@android:color/black"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="16sp"
            android:hint="@string/input_re_password"
            fancy:met_baseColor="@color/colorPrimary"
            fancy:met_primaryColor="@color/colorPrimary"
            fancy:met_floatingLabelText="@string/input_re_password"
            fancy:met_floatingLabel="highlight"
            fancy:met_floatingLabelTextColor="@color/colorPrimary"
            fancy:met_textColorHint="@color/gray_text"
            fancy:met_underlineColor="@android:color/black"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            fancy:fb_defaultColor="@color/colorPrimary"
            fancy:fb_focusColor="@color/colorPrimaryDark"
            fancy:fb_radius="5dp"
            fancy:fb_text="@string/login"
            fancy:fb_textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>