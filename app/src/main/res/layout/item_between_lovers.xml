<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:layout_marginLeft="10dp"
			  android:layout_marginRight="10dp"
			  android:layout_marginTop="10dp"
			  android:background="#F3F3F3"
			  android:orientation="vertical">

	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/portrait"
		android:layout_width="match_parent"
		android:layout_height="130dp"
		android:layout_centerVertical="true"
		android:contentDescription="@null"
		app:actualImageScaleType="fitXY"
		app:failureImage="@mipmap/default_pic"
		app:placeholderImage="@mipmap/default_pic"
		app:placeholderImageScaleType="fitXY"
		app:roundedCornerRadius="2dp"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="5dp"
			android:text="文老师"
			android:textColor="@color/colorPrimary"
			android:textSize="16sp"/>

		<TextView
			android:id="@+id/success_case"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="5dp"
			android:text="累计成功人数：700"
			android:textSize="12sp"/>

	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/divider_height"
		android:background="@color/gray_text"/>

	<TextView
		android:id="@+id/workYear"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:text="从业时间：5年"
		android:textSize="12sp"/>


	<TextView
		android:id="@+id/desciption"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
		android:textSize="12sp"/>

</LinearLayout>