<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/ripple_item_find_love">


		<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/portrait"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:contentDescription="@null"
			app:actualImageScaleType="centerCrop"
			app:failureImage="@mipmap/default_head"
			app:placeholderImage="@mipmap/default_head"
			app:placeholderImageScaleType="centerCrop"
			app:roundedCornerRadius="5dp"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="80dp"
			android:layout_centerInParent="true"
			android:layout_margin="5dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/user_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:layout_gravity="center_horizontal"
				android:text="小强"
				android:textColor="@color/body_text_1"
				android:textSize="16sp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="5dp"
				android:layout_marginLeft="5dp"
				android:layout_gravity="center_horizontal"
				android:text="给您赠送了"
				android:textColor="@color/gray_text"
				android:textSize="12sp"/>


			<TextView
				android:id="@+id/gift_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:layout_gravity="center_horizontal"
				android:textColor="@color/body_text_1"
				android:textSize="16sp"
				android:text="情定戒指"/>

		</LinearLayout>

		<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/gift_url"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="10dp"
			android:contentDescription="@null"
			app:actualImageScaleType="centerCrop"
			app:failureImage="@mipmap/default_pic"
			app:placeholderImage="@mipmap/default_pic"
			app:placeholderImageScaleType="centerCrop"
			app:roundedCornerRadius="2dp"/>

</RelativeLayout>